<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="com.appcom.transitionanimation.app.MainActivity">

    <TextView
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:onClick="onSlideButtonPressed"
        android:text="Slide Animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="onFadeButtonPressed"
        android:text="Fade Animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="onSlideScaleButtonPressed"
        android:text="Slide Scale Animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:onClick="onCustomButtonPressed"
        android:background="#5d51ccff"
        android:text="Full Custom Transition"
        android:layout_width="match_parent"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        android:layout_height="100dp" />


</LinearLayout>
